<%- include header%>
<form method="post">
    标题：<br>
    <input type="text" name="title" value="<%= post.title %>" disabled="disabled"><br>
    标签：<br>
    <% if (post.tags && post.tags.length > 0) { %>
        <% post.tags.forEach(function(tag, index){ %>
            <% if (tag && tag != '') { %>
                <input type="text" name="<%= 'tag' + (index + 1)%>" value="<%= post.tags[index]%>" disabled="disabled">
            <% } else { %>
                <input type="text" name="<%= 'tag' + (index + 1)%>" value="" disabled="disabled">
            <% } %>

        <% }) %>
    <% } else { %>
        <input type="text" name="tag1" disabled="disabled">
        <input type="text" name="tag2" disabled="disabled">
        <input type="text" name="tag3" disabled="disabled">
    <% } %>
    <br>
    正文：<br>
    <textarea name="post" rows="20" cols="100"><%= post.post%></textarea><br>
    <input type="submit" value="保存修改">
</form>
<%- include footer%>