<%- include header%>
<% posts.forEach(function(post, index){ %>
<p><h2><a href="/u/<%= post.name %>/<%= post.time.day %>/<%= post.title %>"><%= post.title %></a></h2>
    <a href="/u/<%= post.name%>"><img src="<%= post.head%>" class="r_head"></a>
</p>
<p class="info">
    作者：<a href="/u/<%= post.name%>"><%= post.name%></a> |
    日期：<%= post.time.minute%> |
    标签：
    <% if (post.tags && post.tags.length > 0) {%>
    <% post.tags.forEach(function(tag, index){ %>
    <% if (tag) { %>
    <a class="tag" href="/tags/<%= tag%>"><%= tag%></a>
    <% }%>
    <% }) %>
    <% }%>
</p>
<p><%- post.post%></p>
<% var pv = 0,commentcount = 0;%>
<% if (typeof post.pv != 'undefined'){ pv = post.pv;} %>
<% if (typeof post.comments != 'undefined') { commentcount = post.comments.length} %>
<p class="info">阅读：<%= pv %> | 评论： <%= commentcount %></p>
<% })%>
<%- include paging%>
<%- include footer%>